{
    "extends": "@project-archi/tsconfig/node.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "./src/modules/shared/*"
            ],
            "@diagram-generator/*": [
                "./src/modules/diagram-generator/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}